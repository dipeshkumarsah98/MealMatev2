<!-- res/drawable/rounded_button.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Set the background color -->
    <solid android:color="#092c5c" /> <!-- Replace with your desired color -->

    <!-- Set rounded corners -->
    <corners android:radius="12dp" /> <!-- Adjust the radius as needed -->

    <!-- Optional: Add a stroke (border) -->
    <stroke
        android:width="1dp"
        android:color="#FFFFFFFF" /> <!-- Replace with your desired border color -->
</shape>
